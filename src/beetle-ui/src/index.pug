doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title orient-beetle
    - var release = process.env['RELEASE'] !== undefined
    - var api = process.env['BEETLE_API_ROOT'] || '/api/'
    - var root = process.env['BEETLE_UI_ROOT'] || '/'
    - var version = process.env['BEETLE_VERSION'] || 'dev'
    - var loginUrl = process.env['BEETLE_LOGIN_URL'] || 'http://localhost:8337/auth/g/redirect'
    - var logoutUrl = process.env['BEETLE_LOGOUT_URL'] || 'http://localhost:8337/auth/logout'
    - var apiDocsUrl = process.env['BEETLE_API_DOCS_URL'] || 'https://www.krumpled.com/beetle-docs/beetle/index.html'
    - var environment = JSON.stringify({ release, api, root, version, loginUrl, logoutUrl, apiDocsUrl })
    - var mainsrc = release ? `${root}main.min.js` : `${root}main.js`
    - var bootsrc = release ? `${root}boot.min.js` : `${root}boot.js`
    - var maincss = `${root}main.css`
    - var fontcss = `${root}icon-font/style.css`
    meta(name="environment", value=environment)
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1"
    )
    link(rel="stylesheet", href=maincss)
    link(rel="stylesheet", href=fontcss)

    link(rel="apple-touch-icon", sizes="180x180",href=root + "favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png", sizes="32x32", href=root + "favicon/favicon-32x32.png")
    link(rel="icon" type="image/png", sizes="16x16",href=root + "favicon/favicon-16x16.png")

    script(type="text/javascript", src=mainsrc)
    script(type="text/javascript", src=bootsrc)
  body
